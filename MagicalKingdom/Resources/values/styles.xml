<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<!-- Dimension -->
    <dimen name="btn_corner_radius">2dp</dimen>

	<color name="xam_purple">#B455B6</color>
	<color name="xam_blue">#3498DB</color>
	<color name="xam_dark_blue">#2C3E50</color>
	<color name="xam_green">#77D065</color>
	<color name="xam_gray">#738182</color>
	<color name="xam_light_gray">#B4BCBC</color>

    <color name="btn_bg_color">@color/xam_green</color>
    <color name="btn_bg_shadow_color">#47A035</color>

    <style name="TextBubble">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginBottom">24dp</item>
    	<item name="android:textColor">#f8ffffff</item>
    	<item name="android:textSize">16sp</item>
    	<item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="TextBubbleSecondary" parent="@style/TextBubble">
    	<item name="android:background">@drawable/bubble_background</item>
    </style>

    <style name="TextBubblePrimary" parent="@style/TextBubble">
    	<item name="android:background">@drawable/bubble_background_2</item>
    </style>
</resources>
